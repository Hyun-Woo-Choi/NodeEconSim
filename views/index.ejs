<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= __('title') %></title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="stylesheets/theme.css">
  <style>
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
    }
  </style>
</head>

<body style="display: flex; flex-direction: column;">
  <nav class="navbar navbar-expand-md navbar-light border-bottom border-gray bg-light">
    <div class="container px-3 d-flex justify-content-start align-items-center">
      <a class="navbar-brand mr-3" href="/">
        <img class="img-fluid" src="images/title_disaster2.png" style="width:80px;" class="d-inline-block align-text-top">
        <span style="font-weight: bold; font-size: 24px;">Disaster Economics Lab</span>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item mx-1">
            <% if (cookie_lang === 'ko') { %>
            <a class="nav-link nav_pointer" style="font-weight: bold;"><u>한글</u></a>
            <% } else { %>
            <a class="nav-link nav_pointer" href="/ko">한글</a>
            <% } %>
          </li>
          <li class="nav-item mx-1">
            <% if (cookie_lang === 'en') { %>
            <a class="nav-link nav_pointer" style="font-weight: bold;"><u>ENG</u></a>
            <% } else { %>
            <a class="nav-link nav_pointer" href="/en">ENG</a>
            <% } %>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div style="flex-grow: 1">
    <div class="pt-3">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <h2 class="text-center"><%= __('title') %></h2>
            <hr class="mb-4">
          </div>
        </div>
      </div>
    </div>

    <!-- Login Box -->
    <div class="pb-5 text-center">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-6 bg-white p-5 border border-info rounded shadow-lg">
            <h1 class="mb-4" style="font-weight: 350; color: #424040;"><%= __('login_title') %></h1>
              <form method="post" action="/login_process">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="Enter ID" name="input_id" required>
                </div>
              <div class="form-group mb-2">
                <input type="password" class="form-control" placeholder="Password" name="input_password" required>
                <small class="form-text text-muted text-right">
                  <a><%= login_status %></a>
                </small>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="pt-2 border-top border-gray bg-light">
    <div class="container">
      <div class="row">
        <div class="col-md-12 text-center">
          <p>© 2024 Disaster Economics Lab. All rights reserved</p>
        </div>
      </div>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>

</html>