<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= __('title') %></title>

  <!-- Styles & Fonts -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />

  <style>
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f8f9fa;
    }

    .navbar-brand img {
      height: 48px;
      margin-right: 10px;
    }

    .navbar span {
      font-size: 22px;
      font-weight: 600;
    }

    .nav-link:focus,
    .nav-link:active {
      transform: none !important;
      font-size: inherit !important;
    }

    .login-box {
      background: #ffffff;
      border: 1px solid #17a2b8;
      border-radius: 12px;
      padding: 2.5rem;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    .form-control:focus {
      border-color: #007bff;
      box-shadow: 0 0 6px rgba(0, 123, 255, 0.25);
    }

    .input-group-text {
      background-color: #e9ecef;
      border: none;
    }

    .btn-primary {
      font-size: 1rem;
      font-weight: bold;
      padding: 0.6rem;
      transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
      background-color: #0056d2;
    }

    footer {
      background-color: #f1f1f1;
      padding: 1rem 0;
      font-size: 14px;
      color: #666;
    }
  </style>
</head>

<body class="d-flex flex-column">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-md navbar-light border-bottom bg-light">
    <div class="container">
      <a class="navbar-brand d-flex align-items-center" href="/">
        <img src="images/title_disaster2.png" alt="Logo" />
        <span>Disaster Economics Lab</span>
      </a>

      <!-- Toggle for mobile -->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Collapsible content -->
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item mx-2">
            <a class="nav-link <%= cookie_lang === 'ko' ? 'font-weight-bold active' : '' %>" href="/ko">한글</a>
          </li>
          <li class="nav-item mx-2">
            <a class="nav-link <%= cookie_lang === 'en' ? 'font-weight-bold active' : '' %>" href="/en">ENG</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main -->
  <main class="flex-grow-1 d-flex justify-content-center" style="padding-top: 10vh;">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6 login-box">
          <h3 class="text-center mb-4 text-dark"><%= __('login_title') %></h3>
          <form method="post" action="/login_process">
            <!-- ID Input -->
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="fa fa-user"></i>
                  </span>
                </div>
                <input type="text" class="form-control" placeholder="Enter ID" name="input_id" required>
              </div>
            </div>

            <!-- Password Input -->
            <div class="form-group mb-2">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="fa fa-lock"></i>
                  </span>
                </div>
                <input type="password" class="form-control" placeholder="Password" name="input_password" required>
              </div>
              <% if (login_status) { %>
              <small class="form-text text-danger text-center mt-2"><%= login_status %></small>
              <% } %>
            </div>

            <!-- Submit -->
            <button type="submit" class="btn btn-primary btn-block mt-3">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="text-center border-top bg-light mt-auto">
    <p class="mb-0">© 2024 Disaster Economics Lab. All rights reserved.</p>
  </footer>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>

</html>